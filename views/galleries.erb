<h2>Viewing the <%= @galleries.name %> gallery</h2>

<ul>
  <% @images.each do |image| %>
    <img src="<%= image.url %>" />
    <li><a href="galleries/edit">Edit Gallery</a></li>
  <% end %>
</ul>

<a href="/galleries/<%= @galleries.id %>/edit">Edit Gallery</a><br />
<a href="/galleries/<%= @galleries.id %>/image/new">Add Image</a> 

<form action="/galleries/<%= @galleries.id %>" method="POST" />
  <input type="hidden" name="_method" value="DELETE" />
  <input type="submit" value="Delete Gallery" />
</form>
